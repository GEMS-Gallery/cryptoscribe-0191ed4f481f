type Post = 
 record {
   author: principal;
   categoryName: text;
   content: text;
   id: nat;
   timestamp: int;
   title: text;
 };
type Category = 
 record {
   description: text;
   name: text;
 };
service : {
  addCategory: (text, text) -> ();
  addPost: (text, text, text) -> ();
  getCategories: () -> (vec Category) query;
  getPosts: (text) -> (vec Post) query;
  initializeCategories: () -> ();
  whoami: () -> (principal);
}
